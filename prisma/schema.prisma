generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DEV_DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  password  String      @default("0000")
  create_at DateTime    @default(dbgenerated("(DATETIME('now', 'localtime'))"))
  posts     Post[]
  Subscribe Subscribe[]
  provider  String      @default("rss-scraper")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  create_at DateTime @default(dbgenerated("(DATETIME('now', 'localtime'))"))
  authorId  Int?
}

model Rss {
  id           Int         @id @default(autoincrement())
  url          String
  category     String
  newspaper    Newspaper   @relation(fields: [newspaper_id], references: [id])
  newspaper_id Int
  create_at    DateTime    @default(dbgenerated("(DATETIME('now', 'localtime'))"))
  Subscribe    Subscribe[]
}

model Newspaper {
  id        Int      @id @default(autoincrement())
  name      String
  Rss       Rss[]
  create_at DateTime @default(dbgenerated("(DATETIME('now', 'localtime'))"))
}

model Subscribe {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [user_id], references: [id])
  user_id   Int
  rss       Rss      @relation(fields: [rss_id], references: [id])
  rss_id    Int
  create_at DateTime @default(dbgenerated("(DATETIME('now', 'localtime'))"))
  cron      String   @default("0 0 12 * * ?")
}
